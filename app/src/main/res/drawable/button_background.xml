<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认状态 -->
    <item tools:ignore="StateListReachable">
        <shape>
            <!-- 渐变背景 -->
            <gradient android:startColor="#4CAF50" android:endColor="#66BB6A" android:angle="45" />
            <!-- 圆角 -->
            <corners android:radius="12dp" />
            <!-- 边框 -->
            <stroke android:color="#388E3C" android:width="2dp" />
            <!-- 内边距（可选） -->
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- 按下时的状态 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 更暗的渐变背景 -->
            <gradient android:startColor="#388E3C" android:endColor="#2E7D32" android:angle="45" />
            <!-- 圆角 -->
            <corners android:radius="12dp" />
            <!-- 边框 -->
            <stroke android:color="#2E7D32" android:width="2dp" />
        </shape>
    </item>
</selector>
